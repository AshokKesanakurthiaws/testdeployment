pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ğŸ“¥ Fetching code from GitHub...'
                git branch: 'main', url: 'https://github.com/AshokKesanakurthiaws/testdeployment.git'
            }
        }

        stage('Build & Verify') {
            steps {
                echo 'ğŸ”§ Checking files and verifying build...'
                sh 'ls -l'
                sh 'cat index.html | head -n 5'
            }
        }

        stage('Deploy to Server') {
            steps {
                echo 'ğŸš€ Deploying files to /var/www/html...'
                // Ensure Jenkins user has permission or passwordless sudo
                sh '''
                sudo rm -rf /var/www/html/*
                sudo cp -r * /var/www/html/
                echo "âœ… Deployment complete!"
                '''
            }
        }
    }

    post {
        success {
            echo 'ğŸ‰ CI/CD pipeline executed successfully!'
        }
        failure {
            echo 'âŒ Pipeline failed. Check logs for details.'
        }
    }
}
